// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
